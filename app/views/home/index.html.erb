<div id="home_page">
    <h4>Search for category or product</h4>
    <div id="search_box">
        <%= form_tag(search_index_path, method: :get) do %>
            <%= text_field_tag(:search, nil, placeholder: 'Seach for', :autocomplete => "off") %>
            <%= submit_tag("Search", :class=>"search_submit") %>
        <% end %>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        init_search('<%= dropdown_search_index_path %>');
    });
</script>